<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="upinn-secrets" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
          <Label text="{{texto}}" textWrap="true" />
          
            <Button text="Init" tap="{{ init }}" class="btn btn-primary"/>
            <Button text="Login" tap="{{ login }}" class="btn btn-primary"/>
            <Button text="GetSecret" tap="{{ get_secret }}" class="btn btn-primary"/>

          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>